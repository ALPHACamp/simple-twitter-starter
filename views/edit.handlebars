<form class="form" action="/users/{{user.id}}/edit" method="POST" enctype="multipart/form-data">
  <div class="row mt-5">
    <div class="col-md-5">

      <div class="avatar-image  d-flex justify-content-center" style="width:auto;border:5px solid #7699bc;">
        {{!-- <object data="https://via.placeholder.com/300" type="image/png" style="width:100%;">
          <img src="{{user.avatar}}" class="card-img" alt="avatar" style="width: 300px; height: 300px;">
        </object> --}}

        {{#if user.avatar }}
        <img src="{{user.avatar}}" class="card-img" alt="avatar" style="width: 300px; height: 300px;">
        {{else}}
        <object data="https://via.placeholder.com/300" type="image/png" style="width:100%;">
        </object>
        {{/if}}

      </div>

      <div class="form-group d-flex justify-content-center mt-3">
        <label class="btn btn-outline-dark" for="avatar" style="color: #1ea1f2;border-color:#1ea1f2;">
          <input type="file" class="btn form-control-file" id="avatar" name="avatar" style="display: none;">
          <i class="fa fa-photo"></i> 上傳圖片
        </label>
      </div>
    </div>

    <div class="col-md-7">
      <div class="form-group input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1" style="color:#1ea1f2;background-color:#223344;">Name</span>
        </div>
        <input type="text" class="form-control" name="name" id="name" value="{{user.name}}">
      </div>

      <div class="form-group  input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1"
            style="color:#1ea1f2;background-color:#223344;">Description</span>
        </div>
        <textarea class="form-control" id="introduction" name="introduction" rows="8">{{user.introduction}}</textarea>
      </div>

      <button type="submit" class="btn btn-outline-dark mt-2 float-right" style="color: #1ea1f2;border-color:#1ea1f2;">
        更新
      </button>
    </div>
  </div>
</form>