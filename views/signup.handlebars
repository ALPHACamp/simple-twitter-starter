<div class="signup-container">
  <div class="dark-bg">
  </div>
  <div class="signup-box">
    <div class="signup-title"><span>Create Your Account</span></div>
    {{#if error_messages}}
    <div class="alert-danger" role="alert">
      {{error_messages}}
    </div>
    {{/if}}
    <form action="/signup" method="POST">
      <div class="signup-list">
        <label for="inputName">Name</label>
        <input type="text" id="inputName" name="name" class="form-control" required>
        <div class="message"></div>
      </div>
      <div class="signup-list">
        <label for="inputEmail">Email</label>
        <input type="text" id="inputEmail" name="email" class="form-control" required>
        <div class="message"></div>
      </div>
      <div class="signup-list">
        <label for="inputPassword">Password</label>
        <input type="password" id="inputPassword" name="password" class="form-control" required>
        <div class="message"></div>
      </div>
      <div class="signup-list">
        <label for="inputPasswordCheck">Confirm Password</label>
        <input type="password" id="inputPasswordCheck" name="passwordCheck" class="form-control" required>
        <div class="message"></div>
      </div>
      <button class="signin" type="submit">Sign Up</button>
      <a class="other-option" href="/signin">Log in</a>
    </form>
  </div>
</div>
<script src="/javascripts/signup.js"></script>